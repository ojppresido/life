<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header text-center">
                    <h3 class="mb-0">Exam Results</h3>
                </div>
                <div class="card-body text-center">
                    <h4 class="mb-4">Your Score: <%= results.score %> / <%= results.total %></h4>
                    <div class="progress mb-3" style="height: 30px;">
                        <div class="progress-bar 
                            <% if(results.percentage >= 70) { %>bg-success
                            <% } else if(results.percentage >= 50) { %>bg-warning
                            <% } else { %>bg-danger
                            <% } %>" 
                            role="progressbar" 
                            style="width: <%= results.percentage %>%;">
                            <%= results.percentage %>%
                        </div>
                    </div>
                    <p class="lead mb-4">
                        <% if(results.percentage >= 70) { %>
                            <span class="text-success">Excellent! Well done!</span>
                        <% } else if(results.percentage >= 50) { %>
                            <span class="text-warning">Good effort! Keep practicing.</span>
                        <% } else { %>
                            <span class="text-danger">Keep studying and try again.</span>
                        <% } %>
                    </p>
                    
                    <div class="row mt-4">
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h5 class="card-title"><%= results.score %></h5>
                                    <p class="card-text">Correct</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h5 class="card-title"><%= results.total - results.score %></h5>
                                    <p class="card-text">Incorrect</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h5 class="card-title"><%= results.total %></h5>
                                    <p class="card-text">Total Questions</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <h4 class="page-title">Question Review</h4>
            <% results.results.forEach((result, index) => { %>
                <div class="card mb-3 
                    <% if(result.isCorrect) { %>result-correct border-success
                    <% } else { %>result-incorrect border-danger
                    <% } %>" id="question-<%= result.question.id %>">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Question <%= index + 1 %></h5>
                        <span class="badge 
                            <% if(result.isCorrect) { %>bg-success
                            <% } else { %>bg-danger
                            <% } %>">
                            <% if(result.isCorrect) { %>Correct
                            <% } else { %>Incorrect
                            <% } %>
                        </span>
                    </div>
                    <div class="card-body">
                        <h6><%= result.question.questionText %></h6>
                        
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <div class="card <%= result.isCorrect ? 'bg-success-subtle' : 'bg-danger-subtle' %>">
                                    <div class="card-body">
                                        <p><strong>Your Answer:</strong> 
                                            <% if(result.userAnswer) { %>
                                                <%= result.question.options.find(opt => opt.id === result.userAnswer).text %>
                                            <% } else { %>
                                                <span class="text-muted">No answer provided</span>
                                            <% } %>
                                        </p>
                                        <p><strong>Correct Answer:</strong> <%= result.question.options.find(opt => opt.id === result.correctAnswer).text %></p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-body">
                                        <h6 class="card-title">Explanation</h6>
                                        <p class="text-muted"><%= result.explanation %></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
            
            <div class="text-center mt-4">
                <a href="/start-exam" class="btn btn-primary me-2">Take Another Exam</a>
                <a href="/" class="btn btn-secondary">Go Home</a>
            </div>
        </div>
    </div>
</div>