<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Admin Dashboard</h2>
            <div>
                <span class="me-3">Welcome, <%= admin.username %>!</span>
                <a href="/admin/logout" class="btn btn-outline-danger">Logout</a>
            </div>
        </div>
        
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card text-white bg-primary">
                    <div class="card-body text-center">
                        <h5 class="card-title"><%= totalQuestions %></h5>
                        <p class="card-text">Total Questions</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-success">
                    <div class="card-body text-center">
                        <h5 class="card-title"><%= subjects.length %></h5>
                        <p class="card-text">Subjects</p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Manage Questions</h5>
                        <p class="card-text">Add, edit, or delete exam questions</p>
                        <a href="/admin/questions" class="btn btn-primary">Manage Questions</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Add New Question</h5>
                        <p class="card-text">Create a new question for the exam bank</p>
                        <a href="/admin/questions/add" class="btn btn-success">Add Question</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">View Reports</h5>
                        <p class="card-text">View exam statistics and reports</p>
                        <a href="#" class="btn btn-info disabled">Coming Soon</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>