<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="text-center mb-5">
            <h1 class="display-4">CBT Exam System</h1>
            <p class="lead">Prepare for your secondary school exams with our comprehensive Computer-Based Testing platform</p>
        </div>
        
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Available Subjects</h5>
                <div class="row">
                    <% if (subjects && subjects.length > 0) { %>
                        <% subjects.forEach(subject => { %>
                            <div class="col-md-4 mb-3">
                                <div class="card h-100">
                                    <div class="card-body text-center">
                                        <h5 class="card-title"><%= subject %></h5>
                                        <p class="card-text">
                                            <small class="text-muted">
                                                <!-- Note: In actual implementation, you would pass question counts from the route -->
                                                Questions available
                                            </small>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="col-12">
                            <p class="text-center">No subjects available yet. Please contact the administrator to add questions.</p>
                        </div>
                    <% } %>
                </div>
                
                <div class="text-center mt-4">
                    <a href="/start-exam" class="btn btn-primary btn-lg">Start Exam</a>
                </div>
            </div>
        </div>
        
        <div class="card mt-4">
            <div class="card-header">
                <h5>How It Works</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 text-center">
                        <div class="feature-icon mb-3">
                            <span class="badge bg-primary rounded-pill">1</span>
                        </div>
                        <h6>Select Subject</h6>
                        <p class="text-muted">Choose the subject you want to practice</p>
                    </div>
                    <div class="col-md-4 text-center">
                        <div class="feature-icon mb-3">
                            <span class="badge bg-primary rounded-pill">2</span>
                        </div>
                        <h6>Take Timed Exam</h6>
                        <p class="text-muted">Answer questions within the time limit</p>
                    </div>
                    <div class="col-md-4 text-center">
                        <div class="feature-icon mb-3">
                            <span class="badge bg-primary rounded-pill">3</span>
                        </div>
                        <h6>Review Results</h6>
                        <p class="text-muted">Get detailed explanations for each question</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>